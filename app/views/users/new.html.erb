  <%= form_for(@user) do |f| %>   
    <div class="field">  
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation, "Password confirmation" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <br>
    <div class="field">
      <%= f.submit "Go!", class: "btn btn-large btn-default" %>
    </div>
  <% end %>
</div>